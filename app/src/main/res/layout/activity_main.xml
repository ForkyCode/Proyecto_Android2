<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:foregroundTint="#000000"
    android:outlineSpotShadowColor="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="355dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_2" />

    <ImageButton
        android:id="@+id/perfil"
        android:layout_width="337dp"
        android:layout_height="82dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FFF6F4"
        android:foregroundTint="@color/design_default_color_on_secondary"
        android:onClick="goToPerfilPersonal"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#070707"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcome"
        app:srcCompat="@drawable/botonimage1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="328dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:hint="Bienvenido"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageButton
        android:id="@+id/lecciones"
        android:layout_width="337dp"
        android:layout_height="82dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FFF6F4"
        android:onClick="goToLecciones"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simulador"
        app:srcCompat="@drawable/pngimg_com___book_png50988" />

    <ImageButton
        android:id="@+id/biblioteca"
        android:layout_width="337dp"
        android:layout_height="82dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FFF6F4"
        android:onClick="goToBiblioteca"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecciones"
        app:srcCompat="@drawable/library" />

    <ImageButton
        android:id="@+id/informacion"
        android:layout_width="337dp"
        android:layout_height="82dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FFF6F4"
        android:onClick="goToInformacion"
        android:scaleType="fitEnd"
        android:scaleX="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biblioteca"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@drawable/data_base" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:text="Perfil Personal"
        android:textColor="#525FE1"
        android:textColorHighlight="#525FE1"
        android:textColorHint="#525FE1"
        android:textColorLink="#525FE1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/perfil"
        app:layout_constraintEnd_toEndOf="@+id/perfil"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="@+id/perfil"
        app:layout_constraintTop_toTopOf="@+id/perfil"
        app:layout_constraintVertical_bias="0.955" />

    <ImageButton
        android:id="@+id/simulador"
        android:layout_width="337dp"
        android:layout_height="82dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FFF6F4"
        android:onClick="goToSimulador"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toTopOf="@+id/lecciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfil"
        app:srcCompat="@drawable/prueba" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:text="InformaciÃ³n"
        android:textColor="#525FE1"
        android:textColorHighlight="#525FE1"
        android:textColorHint="#525FE1"
        android:textColorLink="#525FE1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/informacion"
        app:layout_constraintEnd_toEndOf="@+id/informacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/informacion"
        app:layout_constraintTop_toTopOf="@+id/informacion"
        app:layout_constraintVertical_bias="0.866" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:text="Simulador"
        android:textColor="#525FE1"
        android:textColorHighlight="#525FE1"
        android:textColorHint="#525FE1"
        android:textColorLink="#525FE1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/simulador"
        app:layout_constraintEnd_toEndOf="@+id/simulador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/simulador"
        app:layout_constraintTop_toTopOf="@+id/simulador"
        app:layout_constraintVertical_bias="0.866" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:text="Lecciones"
        android:textColor="#525FE1"
        android:textColorHighlight="#525FE1"
        android:textColorHint="#525FE1"
        android:textColorLink="#525FE1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/lecciones"
        app:layout_constraintEnd_toEndOf="@+id/lecciones"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="@+id/lecciones"
        app:layout_constraintTop_toTopOf="@+id/lecciones"
        app:layout_constraintVertical_bias="0.844" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:text="Biblioteca"
        android:textColor="#525FE1"
        android:textColorHighlight="#525FE1"
        android:textColorHint="#525FE1"
        android:textColorLink="#525FE1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/biblioteca"
        app:layout_constraintEnd_toEndOf="@+id/biblioteca"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/biblioteca"
        app:layout_constraintTop_toTopOf="@+id/biblioteca"
        app:layout_constraintVertical_bias="0.822" />

    <Button
        android:id="@+id/InicioDeSesion"
        android:layout_width="268dp"
        android:layout_height="67dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FEF5F3"
        android:onClick="IniciarSesion"
        android:text="Iniciar Sesion"
        android:textColor="#3F48CB"
        android:textSize="24sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/informacion"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>